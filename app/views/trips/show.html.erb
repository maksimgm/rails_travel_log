<div class="container-fluid">
  <div class="page-header">
    <h1><%= @trip.title %></h1>
    <% if @trip.user.id == current_user.id %>
      <%= link_to 'Create New Entry', new_trip_entry_path(@trip), class:'btn btn-primary' %>
    <% end %>
  </div>
</div>
<div class="container">
  <% @trip.entries.each do |entry| %>
  <div>
    <p><%= entry.title %></p>
    <p><%= entry.location %></p>
    <p><%= entry.summary %></p>
    <p><%= entry.cost %></p>
    <p><%= entry.image %></p>
    <p><%= entry.video_url %></p>
  
  <% if @trip.user.id == current_user.id %>
    <%= link_to "Edit Entry", edit_entry_path(entry), class: "btn btn-info" %>
    <%= link_to "Delete Entry", entry, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
  <% end %>
  </div>
  <% end %>
</div>