<div class="container-fluid">
  <div class="page-header">
    <h1><%= @trip.title %></h1>
    <% if @user.id == current_user.id %>
      <%= link_to 'Create New Entry', new_user_trip_entry_path, class:'btn btn-primary' %>
    <% end %>
  </div>
</div>
<div class="container">
  <% @trip.entries do |entry| %>
  <div>
    <p><%= entry.title %></p>
    <p><%= entry.location %></p>
    <p><%= entry.summary %></p>
    <p><%= entry.cost %></p>
    <p><%= entry.image %></p>
    <p><%= entry.video_url %></p>
  <% end %>
  </div>
</div>