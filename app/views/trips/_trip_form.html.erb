<% if @trip.errors.any? %>
  <div id="error_explanation" class="container">
    <div class="col-md-8 col-md-offset-2">
      <h2>
        <%= pluralize(@trip.errors.count, "error") %> prohibited
        this trip from being saved:
      </h2>
      <ul>
        <% @trip.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    </div>
  <% end %>
      
<div class="container">
  <div class="jumbotron">
    <%= form_for [@user,@trip] do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, :class => 'search_location form-control', placeholder:'Enter a Country' %>
    </div>
    <div class="form-group">
      <%= f.label :duration %>
      <%= f.text_field :duration, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_area :summary, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :budget %>
      <%= f.text_field :budget, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :video_url %>
      <%= f.text_field :video_url, class:'form-control', placeholder:"Paste Vimeo or Youtube embedded code here" %>
    </div>
    <div class="form-group">
      <%= f.submit  class: "btn btn-default btn-primary"%>
      <%= link_to 'Cancel', root_path, class: "btn btn-danger"  %>
    </div>
    <% end -%>
  </div>
</div>
