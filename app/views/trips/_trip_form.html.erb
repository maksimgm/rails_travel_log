<% if @trip.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@trip.errors.count, "error") %> prohibited
      this trip from being saved:
    </h2>
    <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="jumbotron">
    <%= form_for [@user,@trip] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :location %>
    <%= f.text_field :location, :class => 'search_location' %>

    <%= f.label :duration %>
    <%= f.text_field :duration %>

    <%= f.label :summary %>
    <%= f.text_area :summary %>

    <%= f.label :budget %>
    <%= f.text_field :budget %>

    <%= f.label :video_url %>
    <%= f.text_field :video_url %>

    <%= f.submit  class: "btn btn-default btn-primary"%>
    
    <%= link_to 'Cancel', root_path, class: "btn btn-danger"  %>
    
    <% end -%>
  </div>
</div>
