<p>Find me in app/views/sessions/signup.html.erb</p>


<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for(@user, url: signup_path) do |f|%>
  <p>
    <%= label_tag :username%>
    <%= f.text_field :username, autofocus: true %>
  </p>
  <p>  
    <%= label_tag :password%>
    <%= f.password_field :password, required: true %>
  </p>
  <p>  
    <%= label_tag :bio%>
    <%= f.text_area :bio, required: true %>
  </p>
  <p>  
    <%= label_tag :profile_pic%>
    <%= f.uploadcare_field :profile_pic, required: true %>
  </p>
  <p>  
    <%= label_tag :email%>
    <%= f.text_field :email, required: true %>
  </p>
  <p>
    <%= f.submit "Signup", class: "btn btn-primary" %>
  </p>
    <%= link_to "Have an account already? Log in here", login_path %>
  <% end %>